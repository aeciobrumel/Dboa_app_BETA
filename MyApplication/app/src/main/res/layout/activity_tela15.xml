<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="@drawable/fundotela"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context=".tela15_activity">

    <TextView
        android:id="@+id/txtMensagemT15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_weight="50"

        android:textColor="@color/black"
        android:singleLine="false"
        android:text="Você não precisa detectar nada... é justamente esse hiperfoco nas sensações internas que te deixa mais ansioso. você pode direcionar a atenção para coisas que estejam fora de você, descreva a cor e a forma de 5 coisas que o cercam"
        android:textAlignment="center"
        android:textSize="28sp" />


    <Button
        android:id="@+id/passartela16btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="2"
        android:backgroundTint="#2196F3"
        android:insetBottom="70dp"
        android:text="Avançar" />

</androidx.appcompat.widget.LinearLayoutCompat>



