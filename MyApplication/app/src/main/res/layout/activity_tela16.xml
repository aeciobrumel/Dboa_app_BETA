<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="@drawable/fundotela"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context=".tela16_activity">

    <TextView
        android:id="@+id/txtMensagemT16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_weight="50"
        android:singleLine="false"

        android:textColor="@color/black"
        android:text="O aumento dos batimentos cardiacos e a respiração rápida podem simplesmente ser sinais de que você está se sentindo ansioso. Quantas vezes interpretou mal essas sensações? Por que elas deveriam ser perigosas agora? As pessoas não ficam loucas por estarem ansiosas"
        android:textAlignment="center"
        android:textSize="28sp" />


    <Button
        android:id="@+id/passartela17btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:layout_weight="2"
        android:backgroundTint="#2196F3"
        android:insetBottom="70dp"
        android:text="Avançar" />

</androidx.appcompat.widget.LinearLayoutCompat>
