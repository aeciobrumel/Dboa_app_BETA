<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E9ED"
    android:orientation="vertical"

    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:paddingTop="100dp"
        app:srcCompat="@drawable/dboa" />

    <TextView
        android:id="@+id/txtLingua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="Clique na bandeira para alterar a língua" />

    <ImageView
        android:id="@+id/imgBandeira"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/brasil" />


    <ImageView
        android:id="@+id/iniciarbtn"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/panic_button" />
    <TextView
        android:id="@+id/txtbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="center_horizontal"
        android:text="Clique no botão para iniciar" />


</androidx.appcompat.widget.LinearLayoutCompat>